# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK
FIREBASE_ADMIN_PROJECT_ID=your_project_id
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project_id.iam.gserviceaccount.com

# Admin Authentication
ADMIN_PASSWORD_HASH=your_bcrypt_hashed_password_here
JWT_SECRET=your_jwt_secret_key_here

# Primary admin email (used to authorize password reset requests)
ADMIN_EMAIL=admin@example.com

# Developer email used as default secondary recipient for reset links
DEV_EMAIL=dev@example.com

# Optional client-exposed developer email for prefill
NEXT_PUBLIC_DEV_EMAIL=dev@example.com

# Email Configuration (Nodemailer with Gmail)
EMAIL_USER=your_gmail_address@gmail.com
EMAIL_PASS=your_gmail_app_password_here

# SMTP server override (optional). If using Gmail, you can leave these blank.
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_FROM="Portfolio <no-reply@example.com>"

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Deployment URL (automatically set by Vercel)
NEXT_PUBLIC_BASE_URL=http://localhost:3000
